<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<installation version="1.0">
    <info>
        <appname>MultiCastor</appname>
        <appversion>3.0</appversion>
        <authors>
            <author name="Patrick Robinson" email="patrick.robinson@de.ibm.com"/>
            <author name="Erwin Stamm" email="erwin.stamm@de.ibm.com"/>
			<author name="Nick Herrmannsdörfer" email="nick.herrmannsdoerfer@de.ibm.com"/>
			<author name="Stefan Heßler" email="stefan.hessler@de.ibm.com"/>
			<author name="Kai Brennenstuhl" email="kai.brennenstuhl@de.ibm.com"/>
        </authors>
        <url>http://autarchprinceps.github.com/MultiCastor/</url>
    </info>

    <guiprefs width="800" height="600" resizable="yes"/>

    <locale>
        <langpack iso3="eng"/>
        <langpack iso3="deu"/>
    </locale>

    <resources>
        <res id="LicencePanel.licence" src="LICENSE"/>
        <res id="InfoPanel.info" src="README.md"/>
    </resources>

    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>

    <packs>
        <pack name="Base" required="yes">
            <description>The base files</description>
            <file src="Readme.txt" targetdir="$INSTALL_PATH"/>
            <file src="Licence.txt" targetdir="$INSTALL_PATH"/>
            <file src="script.bat" targetdir="$INSTALL_PATH"/>
            <parsable targetfile="$INSTALL_PATH/script.bat"/>
        </pack>
        <pack name="Docs" required="no">
            <description>The documentation</description>
            <file src="Documentation" targetdir="$INSTALL_PATH"/>
        </pack>
        <pack name="Sources" required="no">
            <description>sources</description>
            <file src="ourmulticastor" targetdir="$INSTALL_PATH"/>
        </pack>
		<pack name="Plan" required="no">
            <description>planning documents</description>
            <file src="src" targetdir="$INSTALL_PATH"/>
        </pack>
    </packs>

</installation>
